<LinearLayout
    android:id="@+id/layout_updateProfile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003a6c"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="2dp"
            android:layout_weight=".2"
            android:scaleType="fitXY"
            android:src="@drawable/person"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtMsgFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="6dp"/>

            <EditText
                android:id="@+id/txtMsgLastName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="6dp"/>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/txtMsgEmailId"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:padding="6dp"/>

    <Button
        android:id="@+id/btnMsgUpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#006fce"
        android:shadowColor="#000000"
        android:text="UPDATE PROFILE"
        android:textColor="#fff"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/lblMsgAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="By clicking UPDATE you can start sending messages once. Please kindly wait until the details are updated to our server."
        android:textColor="#fff"/>
</LinearLayout>
