<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/singleMessageContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/singleMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bubble_b">

            <TextView
                android:id="@+id/singleMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:minWidth="50dp"
                android:text="Msg"
                android:textSize="18dp"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMsgTime"
                android:layout_below="@id/singleMessage"
                android:hint="10:30 am"
                android:textSize="10dp"
                android:layout_alignRight="@id/singleMessage"
                android:layout_marginTop="0dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>